url_pre_screening:
  allowed_protocols:
    - "http"
    - "https"
    - "rtmp" # RTMP流
    - "rtp"  # RTP流 (通常用于内网或组播，但不排除有公网的)
    - "p3p"  # 一些特殊协议
  stream_extensions:
    - ".m3u"
    - ".m3u8"
    - ".ts"
    - ".mp4"
    - ".flv"
    - ".aac"
    - ".mp3"
    - ".mov"
    - ".avi"
    - ".webm"
    - ".mpg"
    - ".mpeg"
    - ".rm"
    - ".rmvb"
    - ".wmv"
    - ".mkv"
  invalid_url_patterns:
    - "\\.txt$" # 避免直接抓取原始的txt文件，因为我们已经处理了`name,url`格式
    - "example\\.com" # 排除示例域名
    - "testserver\\.com" # 排除测试服务器
    - "localhost"
    - "127\\.0\\.0\\.1"
    - "privateip" # 排除私有IP段
    - "0\\.0\\.0\\.0"
    - "dummy"
    - "demo"
    - "http://.*\\.jpg$" # 排除图片链接
    - "http://.*\\.png$"
    - "http://.*\\.gif$"
    - "http://.*\\.css$" # 排除CSS文件
    - "http://.*\\.js$"  # 排除JS文件
    - "http://.*\\.html$" # 排除HTML页面 (除非是直接的M3U8下载页)
    - "github\\.com" # 排除github页面链接，只保留raw链接
    - "raw.bgithub.xyz/.*\\.md$" # 排除Markdown文件
    - "raw.bgithub.xyz/.*\\.json$" # 排除JSON文件，除非它们是已知的IPTV格式
    - "youtube\\.com/watch" # 排除YouTube视频页面
    - "youku\\.com" # 排除优酷
    - "qq\\.com" # 排除腾讯
    - "iqiyi\\.com" # 排除爱奇艺
    - "bilibili\\.com" # 排除B站
    - "live\\.bilibili\\.com" # B站直播
    - "douyu\\.com" # 排除斗鱼
    - "huya\\.com" # 排除虎牙
    - "twitch\\.tv" # 排除Twitch
    - "facebook\\.com" # 排除Facebook
    - "twitter\\.com" # 排除Twitter
    - "weibo\\.com" # 排除微博
    - "tiktok\\.com" # 排除TikTok
    - "douyin\\.com" # 排除抖音
    - "kuaishou\\.com" # 排除快手
    - "music\\.163\\.com" # 排除网易云音乐
    - "mp\\.weixin\\.qq\\.com" # 排除微信公众号文章
    - "\\.zip$" # 排除压缩包
    - "(\\.rar|\\.7z|\\.tar|\\.gz|\\.tgz|\\.bz2|\\.xz)$" # 排除其他压缩包
    - "(\\.pdf|\\.doc|\\.docx|\\.xls|\\.xlsx|\\.ppt|\\.pptx)$" # 排除文档文件
    - "(\\.exe|\\.dll|\\.msi|\\.apk|\\.dmg|\\.pkg)$" # 排除可执行文件和安装包
    - "vpn" # 排除VPN相关链接
    - "proxy" # 排除代理相关链接
    - "shadowsocks" # 排除Shadowsocks
    - "v2ray" # 排除V2Ray
    - "trojan" # 排除Trojan
    - "surge" # 排除Surge
    - "clash" # 排除Clash
    - "clashx" # 排除ClashX
    - "speedtest" # 排除测速链接
    - "tracker" # 排除BT Tracker
    - "torrent" # 排除Torrent
    - "magnet" # 排除磁力链接
    - "(\\d{1,3}\\.){3}\\d{1,3}/(24|28|30|32)" # 排除CIDR IP段
    - "rtmp://.*:1935/live/" # 排除典型的CDN RTMP流，这些通常有复杂的鉴权
    - "rtmp://.*\\.akamaized\\.net" # Akamai CDN
    - "rtmp://.*\\.cloudfront\\.net" # CloudFront CDN
    - "rtmp://.*\\.edgecastcdn\\.net" # Edgecast CDN
    - "rtmp://.*\\.cdn\\.aliyuncs\\.com" # 阿里云CDN
    - "rtmp://.*\\.wscloudcdn\\.com" # 网宿CDN
    - "rtmp://.*\\.ccgslb\\.com" # 世纪互联CDN
    - "rtmp://.*\\.hls\\.liveplay\\.myqcloud\\.com" # 腾讯云CDN
    - "rtmp://.*\\.push\\.rtmp\\.qq\\.com" # 腾讯云推流
    - "rtmp://.*\\.live\\.prod\\.bokecc\\.com" # 视博云直播
    - "rtmp://.*\\.flv\\.cdn\\.huya\\.com" # 虎牙直播
    - "rtmp://.*\\.douyucdn\\.cn" # 斗鱼直播
    - "rtmp://.*\\.hixp2p\\.com" # HixP2P
    - "rtmp://.*\\.live\\.cdn\\.cibn\\.cc" # CIBN
    - "rtmp://.*\\.cdn\\.upgslb\\.com" # UPGS
    - "rtmp://.*\\.aixiaoke\\.com" # 爱客
    - "rtmp://.*\\.cdn\\.cloudvdn\\.com" # 云端视讯
    - "rtmp://.*\\.cdn\\.fastweb\\.com\\.cn" # 宽带
    - "rtmp://.*\\.live\\.cdn\\.qqurl\\.net" # 腾讯云直播
    - "rtmp://.*\\.livepush\\.l\\.qq\\.com" # 腾讯云直播推流
    - "rtmp://.*\\.bcloudlive\\.com" # B站直播
