# GitHub 搜索配置
search_keywords:
  # 英文关键词
  - "m3u8 playlist"
  - "iptv list"
  - "m3u"
  - "m3u channels"
  - "iptv channels"
  - "live tv playlist"
  - "free iptv"
  - "public iptv"
  - "tv channels list"
  - "stream list"
  - "live stream list"
  - "m3u stream"
  - "m3u8 stream"
  - "iptv.m3u"
  - "playlist.m3u8"
  - "channels.txt" # 很多直播源列表是纯文本格式
  - "epg.pw" # 这是一个提供EPG和直播源的网站，其链接可能出现在repo中
  - "raw.bgithub.xyz m3u" # 专门搜索raw链接

  # 中文关键词 (强烈推荐，因为很多国内源用中文描述)
  - "直播源"
  - "电视直播"
  - "IPTV直播"
  - "M3U直播"
  - "M3U8直播"
  - "频道列表"
  - "免费直播"
  - "公共直播"
  - "聚合直播"
  - "直播源.txt"
  - "电视直播.m3u"
  - "电视直播.m3u8"
  - "iptv源"
  - "直播地址"
  - "网络电视"
  - "节目单"
  - "最新直播源"
  - "稳定直播源"

# 其他配置（保持不变或根据你的需求调整）
per_page: 100
max_search_pages: 5
github_api_timeout: 38
github_api_retry_wait: 48
channel_fetch_timeout: 15
channel_check_timeout: 6
max_channel_urls_per_group: 200

name_filter_words:
  - "测试"
  - "失效"
  - "demo"
  - "backup"
  - "内测"
  - "测试频道"
  - "广告"

url_filter_words:
  - "test"
  - "demo"
  - "example"
  - "ads"
  - "invalid"

